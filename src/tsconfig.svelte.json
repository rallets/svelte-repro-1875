// be aware that rollup typescript plugin also has his own settings that could override these
{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": [
		"Views/*",
		"Views/**/*",
		"App/*",
		"App/**/*"
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"public/*",
		"wwwroot/*",
		"bin/*",
		"obj/*",
		"Properties/*",
		".vscode/*"
	],
	"compilerOptions": {
		"target": "ES2020",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
	}
}
